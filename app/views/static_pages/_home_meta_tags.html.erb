<% content_for :head do %>
  <meta name="description" content="Create stunning, professional resumes for free. Choose from our growing collection of templates and land your dream job.">
  <meta name="keywords" content="resume builder, free resume, professional resume, ATS friendly resume, resume templates, job application, career">
  <meta name="author" content="FreeResumeBuilderApp">

  <!-- Open Graph for homepage -->
  <meta property="og:title" content="Free Resume Builder - Create Professional Resumes Online">
  <meta property="og:description" content="Create stunning, professional resumes for free. Choose from our growing collection of templates and land your dream job.">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://freeresumebuilderapp.com">
  <meta property="og:image" content="https://freeresumebuilderapp.com/icon.png">

  <!-- Twitter Card for homepage -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="Free Resume Builder - Create Professional Resumes Online">
  <meta name="twitter:description" content="Create stunning, professional resumes for free. Choose from our growing collection of templates and land your dream job.">
  <meta name="twitter:image" content="https://freeresumebuilderapp.com/icon.png">

    <!-- Preconnect to Font Awesome CDN for faster loading -->
  <link rel="preconnect" href="https://cdnjs.cloudflare.com">

  <!-- Load Font Awesome asynchronously to avoid blocking render -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" media="print" onload="this.media='all'">
  <noscript>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  </noscript>

  <!-- Font display optimization for Font Awesome webfonts -->
  <style>
    /* Font Awesome Solid (fas) - weight 900 */
    @font-face {
      font-family: 'Font Awesome 6 Free';
      font-style: normal;
      font-weight: 900;
      font-display: swap;
      src: url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/webfonts/fa-solid-900.woff2') format('woff2');
    }

    /* Font Awesome Regular (far) - weight 400 */
    @font-face {
      font-family: 'Font Awesome 6 Free';
      font-style: normal;
      font-weight: 400;
      font-display: swap;
      src: url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/webfonts/fa-regular-400.woff2') format('woff2');
    }

    /* Font Awesome Brands (fab) - weight 400 */
    @font-face {
      font-family: 'Font Awesome 6 Brands';
      font-style: normal;
      font-weight: 400;
      font-display: swap;
      src: url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/webfonts/fa-brands-400.woff2') format('woff2');
    }
  </style>
<% end %>
