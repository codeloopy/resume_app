<div class="max-w-md mx-auto my-4">
  <h2 class="text-3xl font-bold mb-6 text-center">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="my-4">
      <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border border-gray-300 rounded-md bg-white" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
