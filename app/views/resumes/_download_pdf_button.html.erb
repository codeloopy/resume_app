<div class="mb-4 mt-4 space-y-2">
  <%= link_to "Preview PDF",
              public_resume_pdf_path(@resume.slug),
              class: "inline-block px-4 py-2 bg-gradient-to-r from-green-500 via-green-600 to-green-700 hover:bg-gradient-to-br text-white font-semibold rounded hover:gradient-to-b text-xs mr-2",
              target: "_blank", rel: "noopener",
              data: {
                controller: "pdf-tracking",
                action: "click->pdf-tracking#trackEvent",
                pdf_tracking_action_value: "view_pdf",
                pdf_tracking_slug_value: @resume.slug
              } %>

  <button class="inline-block px-4 py-2 bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br text-white font-semibold rounded hover:gradient-to-b text-xs cursor-pointer"
          data-controller="pdf-download"
          data-action="click->pdf-download#download"
          data-pdf-download-url-value="<%= public_resume_pdf_path(@resume.slug, download: 'true') %>"
          data-pdf-download-slug-value="<%= @resume.slug %>">
    Download PDF
  </button>
</div>
